<header id="header" class="header">  
  <div class="container">            
    <h1 class="logo">
      <a href="index.html"><%= link_to image_tag("logo.jpg", width: "80px"), root_path, class: 'logo-title' %></a>
    </h1>
    <nav class="main-nav navbar navbar-expand-md navbar-dark" role="navigation">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-collapse" aria-controls="navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>           
      <div class="navbar-collapse collapse justify-content-end" id="navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="active nav-item"><%= link_to "Home", root_path, :class=>"nav-link" %></li>
          <li class="nav-item"><%= link_to "How It Works", how_path, :class=>"nav-link" %></li>
          <li class="nav-item"><%= link_to "Get In Touch", contact_path, :class=>"nav-link" %></li>      
          <li class="nav-item"><%= link_to "Plans", new_charge_path, :class=>"nav-link" %></li>     
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to('Logout', destroy_user_session_path, method: :delete, :class => "nav-link", "data-toggle" => "modal", 'data-target' => "#login-modal") %>        
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to('Login', new_user_session_path, :class => "nav-link", "data-toggle" => "modal", 'data-target' => "#login-modal") %>
            </li>
          <% end %>
          
        </ul>
      </div>
    </nav>
  </div>
</header>