<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
  <div class="col-md-5 p-lg-5 mx-auto my-5">
    <h1 class="display-4 font-weight-normal">Vessentially Yours</h1>
    <p class="lead font-weight-normal">Get whats Vessential to you...</p>
    <a class="btn btn-outline-secondary" href="#">Coming soon</a>
  </div>
  <div class="product-device shadow-sm d-none d-md-block"></div>
  <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
</div>

<div class="container">
     <div class="card-deck mb-3 text-center">
       <div class="card mb-4 box-shadow">
         <div class="card-header">
           <h4 class="my-0 font-weight-normal">Male</h4>
         </div>
         <div class="card-body">
          <h1 class="card-title pricing-card-title">$24.99 <small class="text-muted">/ mo</small></h1>
          <ul class="list-unstyled mt-3 mb-4">
            <li>Shirt </li>
            <li>Underwear </li>
            <li>Socks</li>
            <li>Toothbrush</li>
            <li>Toothpaste</li>
            <li>Body Wash</li>
            <li>Shampoo</li>
            <li>Deodorant</li>
            <li>Hand Sanitiser</li>
            <li>Lotion</li>
          </ul>
           <%= form_tag charges_path do %>
             <article>
               <% if flash[:error].present? %>
                 <div id="error_explanation">
                   <p><%= flash[:error] %></p>
                 </div>
               <% end %>
             </article>
            <div class="dropdown">
              <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Choose Size
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Men's Size Small</a>
                <a class="dropdown-item" href="#">Men's Size Medium</a>
                <a class="dropdown-item" href="#">Men's Size Large</a>
                <a class="dropdown-item" href="#">Men's Size XL</a>
              </div>
            </div>
            <br>
            <script 
             src="https://checkout.stripe.com/checkout.js" class="stripe-button"
             data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
             data-description="A month's subscription"
             data-amount="2499"
             data-locale="auto"
            >
            </script>
           <% end %>
         </div>
       </div>

